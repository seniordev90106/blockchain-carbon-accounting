{
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src","*.ts","package.json"],
    "exclude": ["dist/**/*"],
    "references": [
        {"path": "../blockchain-gateway"},
        {"path": "../emissions_data"},
        {"path": "../../data"}
    ],
}

