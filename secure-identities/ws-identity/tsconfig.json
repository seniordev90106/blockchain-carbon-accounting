{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "./*.ts",
    "./src/*.ts",
    "./src/*.json"
  ],
  "exclude": ["node_modules","tests"]
}
