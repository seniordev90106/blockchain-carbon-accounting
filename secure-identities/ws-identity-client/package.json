{
  "name": "@blockchain-carbon-accounting/ws-identity-client",
  "author": "Betrand Rioux <bertrand.rioux@gmail.com>",
  "version": "1.0.2",
  "description": "A client for connecting to the web-socket identity server",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "mocha -exit -require ts-node/register -colors tests/**/*.test.ts --timeout 10000",
    "build": "tsc -p .",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint 'src/**/*.{js,ts}' --quiet --fix \"src/**/*.{js,ts}\"",
    "prepare": "npm run build",
    "//prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@types/debug": "^4.1.7",
    "debug": "3.2.7",
    "dockerode": "^3.3.1",
    "request-promise-native": "1.0.9",
    "tv4": "^1.2.7"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jsrsasign": "10.5.25",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "ws-identity": "^1.0.12",
    "ws-wallet": "^1.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brioux/blockchain-carbon-accounting.git"
  }
}
