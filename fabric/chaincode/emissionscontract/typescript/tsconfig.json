{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.spec.ts", "node_modules"]
}
