    "test:setup": "./cp-blockchain-gateway-lib.sh && ts-node tests/setup.ts && sh tests/setup-s3.sh",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "localS3": "serverless s3 start --address 0.0.0.0",
    "prod": "npm run build && npm run start",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
